<:
# 體系結構列表
%arches = ( i386   => 'Intel x86',
	    m68k   => 'Motorola 680x0',
	    sparc  => 'SPARC',
	    alpha  => 'Alpha',
	  );

# 輸出格式的語言特殊名稱
%formats = ( html => "HTML",
	     pdf  => "PDF",
	     txt  => "ASCII",
           );

$about_lang_setting = '如果你已設置了你的<a href="../../intro/cn">首選語言</a>，
你應該自動獲得正確的譯本。';

sub permute_file {
    my($file, $name, @exts) = @_;
    my($ext, $arch);

    foreach $arch (keys %arches) {
        print "<li> <a href=\"./$arch/$file\">" . $arches{$arch} . $name . "</a>";
	if ( $#exts != -1 ) {
	    foreach $ext (@exts) {
	        print " (<a href=\"./$arch/$file.$ext\"><em>" . 
			$formats{$ext} . "</em></a>)";
	    }
	}
	print "\n";
    }
}
 :>

