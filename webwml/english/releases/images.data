#include wml::debian::installer

<define-tag etch-images-url>http://cdimage.debian.org/debian-cd/4.0_r0</define-tag>

# Dropped this definition again in favor of linking directly to netinst and
# businesscard images; not yet deleted as translations may still use this.
<define-tag etch-small-cd-images>
<images-list url="<etch-images-url/>/@ARCH@/iso-cd/" arch="<strip-arches "<stable-images-arches />" "s390 source" />" />
</define-tag>

<define-tag etch-netinst-images>
<images-list url="<etch-images-url/>/@ARCH@/iso-cd/debian-40r0-@ARCH@-netinst.iso" arch="<strip-arches "<stable-images-arches />" "s390 source" />" />
</define-tag>
<define-tag etch-businesscard-images>
<images-list url="<etch-images-url/>/@ARCH@/iso-cd/debian-40r0-@ARCH@-businesscard.iso" arch="<strip-arches "<stable-images-arches />" "s390 source" />" />
</define-tag>

<define-tag etch-full-cd-images>
<images-list url="<etch-images-url/>/@ARCH@/iso-cd/" arch="<stable-images-arches /> multi-arch" />
</define-tag>
<define-tag etch-full-dvd-images>
<images-list url="<etch-images-url/>/@ARCH@/iso-dvd/" arch="<stable-images-arches /> multi-arch" />
</define-tag>

<define-tag etch-full-cd-jigdo>
<images-list url="<etch-images-url/>/@ARCH@/jigdo-cd/" arch="<stable-images-arches /> multi-arch" />
</define-tag>
<define-tag etch-full-dvd-jigdo>
<images-list url="<etch-images-url/>/@ARCH@/jigdo-dvd/" arch="<stable-images-arches /> multi-arch" />
</define-tag>

<define-tag etch-full-cd-torrent>
<images-list url="<etch-images-url/>/@ARCH@/bt-cd/" arch="<stable-images-arches /> multi-arch" />
</define-tag>
<define-tag etch-full-dvd-torrent>
<images-list url="<etch-images-url/>/@ARCH@/bt-dvd/" arch="<stable-images-arches /> multi-arch" />
</define-tag>

<define-tag etch-other-images>
<images-list url="http://ftp.debian.org/debian/dists/etch/main/installer-@ARCH@/current/images/" arch="<strip-arches "<stable-images-arches />" "source" />" />
</define-tag>
