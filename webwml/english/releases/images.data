#include wml::debian::installer

<define-tag etch-images-url>http://cdimage.debian.org/debian-cd/4.0_r4a</define-tag>

# Dropped this definition again in favor of linking directly to netinst and
# businesscard images; not yet deleted as translations may still use this.
<define-tag etch-small-cd-images>
<images-list url="<etch-images-url/>/@ARCH@/iso-cd/" arch="<strip-arches "<stable-images-arches />" "s390 source" />" />
</define-tag>

<define-tag etch-netinst-images>
<images-list url="<etch-images-url/>/@ARCH@/iso-cd/debian-40r4-@ARCH@-netinst.iso" arch="<strip-arches "<stable-images-arches />" "s390 source" />" />
</define-tag>
<define-tag etch-businesscard-images>
<images-list url="<etch-images-url/>/@ARCH@/iso-cd/debian-40r4-@ARCH@-businesscard.iso" arch="<strip-arches "<stable-images-arches />" "s390 source" />" />
</define-tag>

<define-tag etch-full-cd-images>
<images-list url="<etch-images-url/>/@ARCH@/iso-cd/" arch="<stable-images-arches /> multi-arch" />
</define-tag>
<define-tag etch-full-dvd-images>
<images-list url="<etch-images-url/>/@ARCH@/iso-dvd/" arch="<stable-images-arches /> multi-arch" />
</define-tag>

<define-tag etch-full-cd-jigdo>
<images-list url="<etch-images-url/>/@ARCH@/jigdo-cd/" arch="<stable-images-arches /> multi-arch" />
</define-tag>
<define-tag etch-full-dvd-jigdo>
<images-list url="<etch-images-url/>/@ARCH@/jigdo-dvd/" arch="<stable-images-arches /> multi-arch" />
</define-tag>

<define-tag etch-full-cd-torrent>
<images-list url="<etch-images-url/>/@ARCH@/bt-cd/" arch="<stable-images-arches /> multi-arch" />
</define-tag>
<define-tag etch-full-dvd-torrent>
<images-list url="<etch-images-url/>/@ARCH@/bt-dvd/" arch="<stable-images-arches /> multi-arch" />
</define-tag>

# this needs to link a debian/ mirror rather than cdimage.d.o
# no idea why ftp.nl.d.o is picked -joy, 2007-11-10
# it's a reliable mirror that has all arches and good connectivity -fjp, 2008-02-08
<define-tag etch-otherimages-url>http://ftp.nl.debian.org/debian/dists/etch/main/installer-@ARCH@/current/images/</define-tag>

# this is a generic tag, used by releases/etch/debian-installer/index.wml etc
<define-tag etch-other-images>
<images-list url="<etch-otherimages-url/>" arch="<strip-arches "<stable-images-arches />" "source" />" />
</define-tag>

# these are a bit more more fine-grained tags, used by distrib/netinst.wml
<define-tag etch-verysmall-images>
<images-list url="<etch-otherimages-url/>" arch="<strip-arches "<stable-images-arches />" "source arm s390" />" />
</define-tag>
<define-tag etch-netboot-images>
<images-list url="<etch-otherimages-url/>" arch="<strip-arches "<stable-images-arches />" "source" />" />
</define-tag>
