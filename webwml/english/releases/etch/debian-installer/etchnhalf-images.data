#include wml::debian::installer

<define-tag etchnhalf-images-url>http://cdimage.debian.org/debian-cd/4.0_r7</define-tag>
<define-tag lenny-images-url>http://cdimage.debian.org/cdimage/lenny_di_rc1</define-tag>

<define-tag etchnhalf-netinst-images>
<images-list url="<etchnhalf-images-url/>/@ARCH@/iso-cd/debian-40r7-etchnhalf-@ARCH@-netinst.iso" arch="amd64 i386" />
</define-tag>

<define-tag etchnhalf-businesscard-images>
<images-list url="<lenny-images-url/>/@ARCH@/iso-cd/debian-testing-@ARCH@-businesscard.iso" arch="<strip-arches "<stable-images-arches />" "s390 source" />" />
</define-tag>

# this needs to link a debian/ mirror rather than cdimage.d.o
# no idea why ftp.nl.d.o is picked -joy, 2007-11-10
