#use wml::debian::common_tags
#use wml::debian::common_translation

<bind-gettext-domain domain="templates" />

<define-tag free><gettext domain="templates">free</gettext></define-tag>
<define-tag non-free><gettext domain="templates">non-free</gettext></define-tag>
<define-tag non-dist><gettext domain="templates">not redistributable</gettext></define-tag>

# For the use in headlines, see legal/licenses/byclass.wml
<define-tag headline-free><gettext
          domain="templates">Free</gettext></define-tag>
<define-tag headline-non-free><gettext domain="templates">Non-Free</gettext></define-tag>
<define-tag headline-non-dist><gettext domain="templates">Not Redistributable</gettext></define-tag>

<define-tag dls-result whitespace="delete">
          <preserve isfree />
          <set-var %attributes />
          <ifeq "<get-var isfree />" "no" "<font color="#FF0000"><non-free/></font>" />
          <ifeq "<get-var isfree />" "yes" "<font color="#00FF00"><free/></font>" />
          <ifeq "<get-var isfree />" "non-dist" "<font color="#FF0000"><non-dist/></font>" />
          <restore isfree />
</define-tag>

<define-tag dls-lists-page-header whitespace="delete">
<p>
<gettext domain="templates">See the <a href="./">license information</a> page for an overview of the Debian License Summaries (DLS).</gettext>
</p>
</define-tag>
