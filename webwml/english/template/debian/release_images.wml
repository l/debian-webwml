#use wml::debian::installer
#use wml::debian::release_info

<define-tag standard-images-url>http://cdimage.debian.org/debian-cd/<current-cd-release-dirname/></define-tag>

<define-tag lenny-images-url><standard-images-url/></define-tag>

# used in CD/netinst/index.wml
<define-tag lenny-small-cd-images>
<images-list url="<lenny-images-url/>/@ARCH@/iso-cd/" arch="<strip-arches "<lenny-images-arches />" "s390 source" />" />
</define-tag>

<define-tag lenny-netinst-images>
<images-list url="<lenny-images-url/>/@ARCH@/iso-cd/debian-<current-cd-release-filename/>-@ARCH@-netinst.iso" arch="<strip-arches "<lenny-images-arches />" "s390 source" />" />
</define-tag>
<define-tag lenny-businesscard-images>
<images-list url="<lenny-images-url/>/@ARCH@/iso-cd/debian-<current-cd-release-filename/>-@ARCH@-businesscard.iso" arch="<strip-arches "<lenny-images-arches />" "s390 source" />" />
</define-tag>

<define-tag lenny-full-cd-images>
<images-list url="<lenny-images-url/>/@ARCH@/iso-cd/" arch="<lenny-images-arches /> multi-arch" />
</define-tag>
<define-tag lenny-full-dvd-images>
<images-list url="<lenny-images-url/>/@ARCH@/iso-dvd/" arch="<lenny-images-arches /> multi-arch" />
</define-tag>

<define-tag lenny-full-cd-jigdo>
<images-list url="<lenny-images-url/>/@ARCH@/jigdo-cd/" arch="<lenny-images-arches /> multi-arch" />
</define-tag>
<define-tag lenny-full-dvd-jigdo>
<images-list url="<lenny-images-url/>/@ARCH@/jigdo-dvd/" arch="<lenny-images-arches /> multi-arch" />
</define-tag>
<define-tag lenny-full-bluray-jigdo>
<images-list url="<lenny-images-url/>/@ARCH@/jigdo-bd/" arch="i386 amd64 source" />
</define-tag>

<define-tag lenny-full-cd-torrent>
<images-list url="<lenny-images-url/>/@ARCH@/bt-cd/" arch="<lenny-images-arches /> multi-arch" />
</define-tag>
<define-tag lenny-full-dvd-torrent>
<images-list url="<lenny-images-url/>/@ARCH@/bt-dvd/" arch="<lenny-images-arches /> multi-arch" />
</define-tag>

# this needs to link a debian/ mirror rather than cdimage.d.o
# no idea why ftp.nl.d.o is picked -joy, 2007-11-10
# it's a reliable mirror that has all arches and good connectivity -fjp, 2008-02-08
<define-tag lenny-otherimages-url>http://ftp.nl.debian.org/debian/dists/lenny/main/installer-@ARCH@/current/images/</define-tag>

# this is a generic tag, used by releases/lenny/debian-installer/index.wml etc
<define-tag lenny-other-images>
<images-list url="<lenny-otherimages-url/>" arch="<strip-arches "<lenny-images-arches />" "source" />" />
</define-tag>

# these are a bit more more fine-grained tags, used by distrib/netinst.wml
<define-tag lenny-verysmall-images>
<images-list url="<lenny-otherimages-url/>" arch="<strip-arches "<lenny-images-arches />" "source arm s390" />" />
</define-tag>
<define-tag lenny-netboot-images>
<images-list url="<lenny-otherimages-url/>" arch="<strip-arches "<lenny-images-arches />" "source" />" />
</define-tag>
