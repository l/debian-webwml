
<define-tag card endtag=required>
<preserve name />
<set-var %attributes />
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
  <td valign=top>
    <table border="0" cellspacing="0" cellpadding="4">
    <tr>
    <th bgcolor="#000000" align=center>\
      <big><strong><font color="#ffd400" face="$(SANS_SERIF_FONT:-Arial,Helvetica)">\
# Not all languages use single-byte characters, so extra spacing between
# the characters is accomplished using CSS.
      <span style="letter-spacing: 0.2em"><get-var name /></span>\
      </font></strong></big>\
    </th></tr>
    </table>
  </td>
  </tr>
  <tr>
  <td width=100% valign=top bgcolor="#000000">
    <table width="100%" border="0" cellspacing="2" cellpadding="4">
    <tr><td bgcolor="#ffffff">
%body
    </td></tr>
    </table>
  </td>
  </tr>
  </table>
<restore name />
</define-tag>
