</define-tag>

<define-tag backissues whitespace=delete>
  <gettext><a href="../../">Back issues</a> of this newsletter are available.</gettext>
</define-tag>

<define-tag editor1 whitespace=delete>
  <gettext>Debian Weekly News is edited by <a href="mailto:dwn@debian.org">Joey Hess</a>.</gettext>
</define-tag>
<define-tag editor2 whitespace=delete>
  <gettext>Debian Weekly News is edited by <a href="mailto:dwn@debian.org">Joe 'Zonker' Brockmeier, Jean-Christophe Helary and Tollef Fog Heen</a>.</gettext>
</define-tag>
<define-tag editor3 whitespace=delete>
  <gettext>Debian Weekly News is edited by <a href="mailto:dwn@debian.org">Joe 'Zonker' Brockmeier and Martin 'Joey' Schulze</a>.</gettext>
</define-tag>
<define-tag editor4 whitespace=delete>
  <gettext>Debian Weekly News is edited by <a href="mailto:dwn@debian.org">Yooseong Yang and Martin 'Joey' Schulze</a>.</gettext>
</define-tag>
<define-tag editor5 whitespace=delete>
  <gettext>Debian Weekly News is edited by <a href="mailto:dwn@debian.org">Martin 'Joey' Schulze</a>.</gettext>
</define-tag>

<define-tag editor whitespace=delete>
<:{
     my $path = q|<get-var WML_SRC_DIRNAME>|;
     my ($issue, $year, $null) = split /\//, scalar reverse $path;
     $year = reverse $year;
     $issue = reverse $issue;
     if ($year =~ /^\d+$/) {

	  # This is a normal issue
     } elsif ($issue =~/^\d+$/) {
	  # year/index.wml or equvalient.
	  $year = $issue;
	  $issue = 999;
     } else {
	  $year = 9999;
	  $issue = 0;
     }
     
     if (($year > 2002) or (($year == 2002) and ($issue >= 2))) {
	  print q{<editor4>};
     } elsif (($year > 2001) or (($year >= 2001) and ($issue >= 20))) {
	  print q{<editor3>};
     } elsif (($year > 2001) or (($year >= 2001) and ($issue >= 10))) {
	  print q{<editor2>};
     } else {
	  print q{<editor1>};
     }
}:>
</define-tag>

<hrline/>

<p>
<subscribe/>

<ifeq "$(NOBACKISSUES)" ""
"<p><backissues/></p>"
/>

<p>
<editor/>
