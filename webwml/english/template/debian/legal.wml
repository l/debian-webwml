#use wml::fmt::verbatim
#use wml::debian::common_tags
#use wml::debian::common_translation
#use wml::debian::languages
#use wml::debian::ctime
#use wml::debian::submenu
#use wml::debian::legal_tags

<bind-gettext-domain domain="templates" />

<define-tag legal whitespace="delete">
	  <gettext domain="templates">License Information</gettext>
</define-tag>

<define-menu-item name="index">
  <gettext domain="templates">DLS Index</gettext>
</define-menu-item>

<define-menu-item name="dfsg">
  <gettext domain="templates">DFSG</gettext>
</define-menu-item>

<define-menu-item name="faq">
  <gettext domain="templates">DFSG FAQ</gettext>
</define-menu-item>

<define-menu-item name="dlegal">
  <gettext domain="templates">Debian-Legal Archive</gettext>
</define-menu-item>



# Start of the actual page

#use wml::debian::basic title="<legal/> -- <pagetitle/>"

<menu-item name="index" basename="./" />
<menu-item name="dfsg" basename="$(HOME)/social_contract#guidelines" />
<menu-item name="faq" basename="http://people.debian.org/~bap/dfsg-faq.html" />
<menu-item name="dlegal" basename="http://lists.debian.org/debian-legal/" />


<h1>\
<ifeq "<license-version/>" ""
# title string without version, on the form "dls-xxx - license name: status"
"<: printf( '<gettext domain="templates">%s  &ndash; %s: %s</gettext>',
  '<pagetitle/>', '<license-name/>', '<dls-result isfree="<isfree>"/>' ) :>"
# title string with version, on the form "dls-xxx - license name, version: status"
"<: printf( '<gettext domain="templates">%s  &ndash; %s, Version %s: %s</gettext>',
  '<pagetitle/>', '<license-name/>', '<license-version/>', '<dls-result isfree="<isfree>"/>' ) :>" />\
</h1>

<h2>Debian License Summary</h2>

<dl compact>
<dt><gettext domain="templates">Date published</gettext>:</dt>
	<dd><:= newsdate('<report_date/>') :></dd>
<dt><gettext domain="templates">License</gettext>:</dt>
	<dd><a href="<license-url/>"><license-name/></a></dd>
<ifneq "<license-version/>" ""
"<dt><gettext domain="templates">Version</gettext>:</dt>
	<dd><license-version/></dd>" />
<dt><gettext domain="templates">Summary</gettext>:</dt>
	<dd><dls-result isfree="<isfree/>"/>
<ifneq "<short-summary/>" "" "&ndash; <short-summary/>" />
	</dd>
<dt><gettext domain="templates">Justification</gettext>:</dt>
	<dd><justification/></dd>
<dt><gettext domain="templates">Discussion</gettext>:</dt>
        <dd><url "<discussion-url/>" /></dd>
<dt><gettext domain="templates">Original Summary</gettext>:</dt>
<ifneq "<summary-url/>" ""
  "     <dd><gettext domain="templates">The original summary by <summary-author/> can be found in the <a href="<summary-url/>">list archives</a>.</gettext></dd>"
  "     <dd><gettext domain="templates">This summary was prepared by <summary-author/>.</gettext></dd>"
/>
<ifneq "<license-text-trans/>" "" "
<dt><gettext domain="templates">License text (translated)</gettext>:</dt>
	<dd><license-text-trans/></dd>
"/>
<dt><gettext domain="templates">License text</gettext>:</dt>
	<dd>{#licensetext#}</dd>
</dl>

{#pre_footer#:
<hrline/>

<:= languages() :>

<hrline/>
:#pre_footer#}

{#licensetext#:
