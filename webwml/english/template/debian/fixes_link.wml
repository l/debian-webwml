<perl>

# creates a link given the parameters or returns "arch: N/A" or "arch: not fixed"
# if applicable
# if $stable = "none" then not fixed is sent
# if $stable = "" then not applicable is sent

<define-tag notneeded whitespace=delete>
	[EN:not needed:]
	[PT:não necessário:]
	[HR:nije potrebno:]
	[FR:non nécessaire:]
	[DE:nicht benötigt:]
	[IT:not needed:]
	[JA:not needed:]
	[PL:Nie potrzebny:]
	[ES:no necesario:]
</define-tag>
<define-tag notavailable whitespace=delete>
	[EN:not available:]
	[PT:não disponível:]
	[HR:nije dostupno:]
	[FR:non disponible:]
	[DE:nicht vorhanden:]
	[IT:not available:]
	[JA:not available:]
	[PL:Nie dostêpne:]
	[ES:No Disponible:]
</define-tag>
<define-tag notapplicable whitespace=delete>
	[EN:N/A:]
	[PT:Não Aplicável:]
	[HR:nije primjenjivo:]
	[FR:N/A:]
	[DE:nicht anwendbar:]
	[IT:N/A:]
	[JA:N/A:]
	[PL:N/A:]
	[ES:N/A:]
</define-tag>
<define-tag in1.3 whitespace=delete>
	[EN:in release 1.3:]
	[PT:na versão 1.3:]
	[HR:u verziji 1.3:]
	[FR:dans la version 1.3:]
	[DE:in Version 1.3:]
	[IT:in release 1.3:]
	[JA:in release 1.3:]
	[PL:w wersji 1.3:]
	[ES:en la versión 1.3:]
</define-tag>
<define-tag in2.0 whitespace=delete>
	[EN:in release 2.0:]
	[PT:na versão 2.0:]
	[HR:u verziji 2.0:]
	[FR:dans la version 2.0:]
	[DE:in Version 2.0:]
	[IT:in release 2.0:]
	[JA:in release 2.0:]
	[PL:w wersji 2.0:]
	[ES:en la versión 2.0:]
</define-tag>
<define-tag in2.1 whitespace=delete>
	[EN:in release 2.1:]
	[PT:na versão 2.1:]
	[HR:u verziji 2.1:]
	[FR:dans la version 2.1:]
	[DE:in Version 2.1:]
	[IT:in release 2.1:]
	[JA:in release 2.1:]
	[PL:w wersji 2.1:]
	[ES:en la versión 2.1:]
</define-tag>
<define-tag in2.2 whitespace=delete>
	[EN:in release 2.2:]
	[PT:na versão 2.2:]
	[HR:u verziji 2.2:]
	[FR:dans la version 2.2:]
	[DE:in Version 2.2:]
	[IT:in release 2.2:]
	[JA:in release 2.2:]
	[PL:w wersji 2.2:]
	[ES:en la versión 2.2:]
</define-tag>

# DO NOT translate anything below here. If you feel something needs to be changed, write to
# debian-www first

sub fixes_link 
{
  	my ( $release, $arch, $section, $package, $version ) = @_;

	if ( $release eq "not" )
	{
		$str = "<DD><notneeded>";
	}
	elsif ( $release eq "bo" )
	{
		$str = "<DD>$arch - (<in1.3>) $version";
	}
	elsif ( $release eq "hamm" )
	{
		$str = "<DD>$arch - (<in2.0>) ";
		if ( $version eq "not" )
		{
			$str .= "<notapplicable>";
		}
		elsif( $version eq "none" )
		{
			$str .= "<notavailable>";
		}
		else
		{
			if ( $section eq "" )
			{
				$str .= "$version";
			}
			else
			{
				$str .= "<A HREF=\"/Packages/stable/$section/$package.html\">";
				$str .= "$version</A>";
			}
		}
	}
	elsif ( $release eq "slink" )
	{
		$str = "<DD>$arch - (<in2.1>) ";
		if ( $version eq "not" )
		{
			$str .= "<notapplicable>";
		}
		elsif( $version eq "none" )
		{
			$str .= "<notavailable>";
		}
		else
		{
			if ( $section eq "" )
			{
				$str .= "$package-$version";
			}
			else
			{
				$str .= "<A HREF=\"/Packages/frozen/$section/$package.html\">";
				$str .= "$package-$version</A>";
			}
		}
	}
	elsif ( $release eq "potato" )
	{
		$str = "<DD>$arch - (<in2.2>) ";
		if ( $version eq "not" )
		{
			$str .= "<notapplicable>";
		}
		elsif( $version eq "none" )
		{
			$str .= "<notavailable>";
		}
		else
		{
			if ( $section eq "" )
			{
				$str .= "$package-$version";
			}
			else
			{
				$str .= "<A HREF=\"/Packages/unstable/$section/$package.html\">";
				$str .= "$package-$version</A>";
			}
		}
	}
	else
	{
		$str = '';
	}
	return $str;
}

</perl>
