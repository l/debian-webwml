# Please keep slices sorted alphabetically with the exception of English.

<define-tag moreinfo whitespace=delete>
	[EN:More information:]
	[DE:Weitere Informationen:]
	[FR:Plus d'informations:]
</define-tag>

<define-tag takenby whitespace=delete>
	[EN:Taken by:]
	[DE:Übernommen von:]
	[FR:Pris en charge par:]
</define-tag>


# DO NOT translate anything below here. --------------------------------------

<define-tag rating1>
 <img src="$(PICS)/star-grn.gif" alt="*">
</define-tag>
<define-tag rating2>
 <img src="$(PICS)/star-yel.gif" alt="*"><img src="$(PICS)/star-yel.gif" alt="*">
</define-tag>
<define-tag rating3>
 <img src="$(PICS)/star-red.gif" alt="*"><img src="$(PICS)/star-red.gif" alt="*"><img src="$(PICS)/star-red.gif" alt="*">
</define-tag>

<define-tag item endtag=required>
<preserve subject url urlname taken-by rating />
<set-var %attributes />

<table width="100%" border="0" cellspacing="0" cellpadding="15">
<tr><td>
  <minicard name=<get-var subject />>
    %body
    <table width="100%" border="0" cellspacing="0" cellpadding="0"><tr>
     <td align="left" valign="bottom">
      <if <get-var rating>
       "&nbsp;<br>
        <i>rating&nbsp;: </i>
        <var-case 
          rating=1 <rating1>
          rating=2 <rating2>
          rating=3 <rating3>
        />"
      />
     </td>
     <td align="right" valign="bottom">
      <i><moreinfo>&nbsp;: <a href=<get-var url>><get-var urlname></a></i>
      <if <get-var taken-by> "<br><i><takenby>&nbsp;:</i> <get-var taken-by>" />
     </td>
    </tr></table>
  </minicard>
</td></tr>
</table>

<restore subject url urlname taken-by rating />
</define-tag>
