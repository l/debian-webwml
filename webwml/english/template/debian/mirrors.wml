<perl>
unless ( ("$(WML_SRC_BASENAME)" eq "index") &&
         ("" eq &relpath(&canonpath('$(WML_SRC_DIRNAME)/$(HOME)'), '$(WML_SRC_DIRNAME)')) &&
         ("$(fpreal)" ne "yea")
       )
{
  $path = &canonpath(&relpath(&canonpath('$(WML_SRC_DIRNAME)/$(HOME)'), '$(WML_SRC_DIRNAME)')."/".'$(WML_SRC_BASENAME)');
  $path =~ s/index$//;
  print <<END;
<stuff $path>
END
}
</perl>
