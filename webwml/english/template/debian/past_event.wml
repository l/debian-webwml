<:
  if (open (PAGE, "$WML_SRC_FILENAME")) {
    $go = 0;
    $use = 0;
    while (<PAGE>) {
      next until ($use || /^#use wml::debian::past_event/);
      $use = 1;
      next if (/^#/ || /^\s*$/);
      $go =1;
    }
    close (PAGE);
  } else {
    $go = 1;
  }

