<h3><gettext domain="organization">Support and Infrastructure</gettext></h3>

<ul>
  <job <a href="$(HOME)/support"><gettext domain="organization">User support</gettext></a>>
    <ul>
<set-var file-contents=<include $(HOME)/../english/MailingLists/lists.cfg verbatim=true>>
<perl>
  my %userlists = (
  #   Read line by line and builds hash array
  <foreach m file-contents>\
    <when <match <get-var m> "List: debian-user-.*@lists.debian.org">>\
      <set-var n=<subst-in-string <get-var m> ".*List: (debian-user-.*)@lists.debian.org.*" "\\1">>\
      <set-var o=<subst-in-string <get-var m> ".*List: debian-user-(.*)@lists.debian.org.*" "\\1">>\
      '<get-var o>' => q{<get-var n>},\
    </when>\
  </foreach>
  );
  my $userlists_lang = {};
  $userlists_lang{$trans{$CUR_ISO_LANG}{english}} = "debian-user\@lists.debian.org";
  foreach my $list (keys %userlists) {
    $userlists_lang{$trans{$CUR_ISO_LANG}{$list}} = "$userlists{$list}\@lists.debian.org";
  }
  foreach my $list (sort langcmp keys %userlists_lang) {
    print "<li>$list -- &lt;<a href=\"mailto:$userlists_lang{$list}\">$userlists_lang{$list}</a>&gt;</li>\n";
  }
</perl>
