# Translations only occur in the '[EN: ... :]' strings
# DO NOT translate strings in 'ifeq' statements.

#use wml::debian::countries

# Greetings Translators!
# This is the normal language slicing stuff that you know and love.
# Note the Language: field which uses the languange_names template 
# to do its translation.
#

<define-tag URL>\
	<: if(q{%0} eq "") { print "<strong>URL:</strong> <none><br>";}
		else { $tmp=q{%0}; print "<strong>URL:</strong> <a href=\"$tmp\">$tmp</a><br>";}
	:>
</define-tag>
<define-tag title>\
	<font size=+1><b>\
	%attributes\
	</b></font><br>
</define-tag>
<define-tag author>\
	<strong>\
	[EN:Author:]\
	[ES:Author:]\
	[FR:Author:]\
	[DE:Author:]\
	[HR:Author:]\
	:</strong> %attributes<br>
</define-tag>

<define-tag email>\
	<strong>\
	[EN:email:]\
	[ES:email:]\
	[FR:email:]\
	[DE:Email:]\
	[HR:email:]\
	:</strong> <a href="mailto:%attributes">%attributes</a><br>
</define-tag>
<define-tag available>\
	<strong>\
	[EN:Available at:]\
	[ES:Available at:]\
	[FR:Available at:]\
	[DE:Available at:]\
	[HR:Available at:]\
	:</strong> %attributes<br>
</define-tag>
<define-tag language>\
	<strong>\
	[EN:Language:]\
	[ES:Language:]\
	[FR:Language:]\
	[DE:Language:]\
	[HR:Language:]\
	:</strong> <:= $trans{$CUR_ISO_LANG}{%attributes} :><br>
</define-tag>
<define-tag cd-included>\
	<strong>\
	[EN:CD Included:]\
	[ES:CD Included:]\
	[FR:CD Included:]\
	[DE:CD Included:]\
	[HR:CD Included:]\
	:</strong> %attributes<br>
</define-tag>

<define-container bookentry>\
%body
<HR>
</define-container>

