<:
use lib '$(ENGLISHDIR)/../Perl';
use Locale::Language;
use Locale::gettext;

sub language_name {
        my $lang=shift;
        my $country=undef;
	my $loc=language2code($(CUR_LANG));

	$lang  =~ s/@.*$//;
        if ($lang =~ m,^(..)_(..)$,) {
                $lang=$1;
                $country=$2;
        }
        if (`isoquery -i 639-3 --name $lang 2>/dev/null`) {
		# isoquery fails for unavailable locale, included en, see #624147
		if ($loc eq 'en'){
			$lang = `isoquery -i 639-3 -n $lang`;
		}
		else {
			$lang = `isoquery -i 639-3 -l $loc -n $lang`;
		}
		chomp $lang;
		$lang =~ s/^.*\t//g;
		# Fix a bug in iso-codes: French typography expect languages to start with a lowercase
		$lang = lcfirst $lang if ($loc eq 'fr');
        } else {
                return qq(<Unknown_Language>);
        }
        if (defined $country) {
		if (`isoquery --name $country 2>/dev/null`) {
			if ($loc eq 'en'){
				$country = `isoquery --name $country`;
			}
			else {
				$country = `isoquery -l $loc --name $country`;
			}
                }
		chomp $country;
		$country =~ s/^.*\t//g;
	        return "<langcountryoutput $lang $country>";
        } else {
                return $lang;
        }
}
:>

<define-tag language-name whitespace=delete>
<:=language_name('%0'):>
</define-tag>

<define-tag po4a-langs-long>
<:
@po4alangs = ();
open(LANGS, "< $(ENGLISHDIR)/international/l10n/data/langs")
        || die "Unable to read $(ENGLISHDIR)/international/l10n/data/langs (use script/list-languages.pl to regenerate it)";
while (<LANGS>) {
        if (s/^po4a:\s+//) {
                @po4alangs = split(' ', $_);
                last;
        }
}
close(LANGS);
print "<ul>\n" if (@po4alangs);
foreach my $l (sort @po4alangs) {
        print "<li>$l &mdash; <a href=\"$l\">".language_name($l)."</a></li>\n";
}
print "</ul>\n" if (@po4alangs);
:>
</define-tag>

<define-tag po4a-langs-short>
<:
open(LANGS, "< $(ENGLISHDIR)/international/l10n/data/langs")
        || die "Unable to read $(ENGLISHDIR)/international/l10n/data/langs";
while (<LANGS>) {
        if (s/^po4a:\s+//) {
                foreach my $code (split(' ', $_)) {
                        print " [<a href=\"$code\">$code</a>] ";
                }
                last;
        }
}
close(LANGS);
:>
</define-tag>

