#use wml::debian::languages

<perl>
my %langs_reverse = ();
foreach $lang (keys %langs) {
  my $foo = $langs{$lang};
  $langs_reverse{$foo} = $lang;
};

if ("$(TEAM)" ne "") {
  (my $l = "$(TEAM)") =~ s/_\S+$//;
  $teampolang = ucfirst $langs_reverse{'$(TEAM)'};
  $header = "<tr><td>Package<td>Score<td>Details<td>PO files\n";
} else {
  $header = "<tr><td>Packages<td>Score<td>Details<td>po Files\n"; # <td>Maintainer<td>comments\n";
}
</perl>

#use wml::debian::template title="PO files in Debian for each language"

<: print "<h2>$teampolang</h2>\n" if ("$(TEAM)" ne ""); :>

