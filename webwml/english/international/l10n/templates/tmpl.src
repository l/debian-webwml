#use wml::debian::template title="Status of Debconf templates for language code: @tmpl_lang@"
#include '$(ENGLISHDIR)/international/l10n/dtc.def'

<:
@polangs = ();
open(LANGS, "< $(ENGLISHDIR)/international/l10n/data/langs") || die "Unable to read $(ENGLISHDIR)/international/l10n/data/langs";
while (<LANGS>) {
        if (s/^templates:\s+//) {
                foreach my $code (split(' ', $_)) {
                        print " [<a href=\"$code\">$code</a>] ";
                }
                last;
        }
}
close(LANGS);
:>

