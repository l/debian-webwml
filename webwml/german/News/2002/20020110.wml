#use wml::debian::news
#use wml::debian::translation-check translation="1.5"
# $Id$

<define-tag revision>2.2r5</define-tag>

<define-tag dsa>
    <tr><td align="center"><a href="$(HOME)/security/%0/dsa-%1">DSA %1</a></td>      <td align="center">%2</td></tr>
