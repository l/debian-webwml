<ifneq <get-var cdimage:release-notes /> "" "
  <dl>
    <dt><i>
      <get-var cdimage:release-notes-version>
      の最新の注意点:</i> &nbsp; \
      <small>[<a href="releases/">古い注意点</a>]</small></dt>
    <dd><get-var cdimage:release-notes></dd>
  </dl>
"/>

