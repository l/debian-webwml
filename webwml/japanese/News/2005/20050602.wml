#use wml::debian::news
#use wml::debian::translation-check translation="1.2"

<define-tag revision>3.0r6</define-tag>

<define-tag dsa>
    <tr><td align="center"><a href="$(HOME)/security/%0/dsa-%1">DSA %1</a></td>
        <td align="center"><:
    my @p = ();
    for my $p (split (/,\s*/, "%2")) {
	push (@p, sprintf ('<a href="http://packages.debian.org/%s">%s</a>', $p, $p));
    }
