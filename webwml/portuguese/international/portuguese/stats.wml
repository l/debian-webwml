
#use wml::debian::template title="Portuguese translation stats"

#include '$(ENGLISHDIR)/../french/international/french/ltcp.def'

<perl>
#include '$(ENGLISHDIR)/../french/international/french/ltcp.pl' IPP_NOSYNCLINES

my $cat = { 'Web' => 0 };
my $cpt = { 'Web' => 0 };

#include 'current_status.pl' IPP_NOSYNCLINES

update_db_format();

foreach my $k (sort keys %$translations) {
	my $t = $translations->{$k} ;
	$cat->{'Web'}++;
	$cpt->{'Web'}->{$t->{'status'}}++;
}

$filename[1] = 'untranslated';
$filename[3] = 'outdated';
$filename[4] = 'uptodate';

print "
<p>Web pages: $cat->{'Web'}</p>
<ul>
";

foreach my $s (sort keys %{$cpt->{'Web'}}) {
	printf ("<li>\`\`<a href=\"www-$filename[$s].fr.html\">$status[$s]</a>'' documents: $cpt->{'Web'}->{$s} (%.1f\%)</li>\n",
           $cpt->{'Web'}->{$s}/$cat->{'Web'}*100);
}
print "
</ul>
";

</perl>
 

