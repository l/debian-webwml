<:
# list of architectures
%arches = ( i386   => 'Intel x86',
	    m68k   => 'Motorola 680x0',
	    sparc  => 'SPARC',
	    alpha  => 'Alpha',
	  );

# language specific name for output formats
%formats = ( html => "HTML",
	     pdf  => "PDF",
	     txt  => "pelkkä teksti",
           );

$about_lang_setting = 'Jos olet määrittänyt
<a href="../../intro/cn">suosikkikielesi</a>,
sinun pitäisi saada oikea versio automaattisesti.';

sub permute_file {
    my($file, $name, @exts) = @_;
    my($ext, $arch);

    foreach $arch (keys %arches) {
        print "<li> <a href=\"./$arch/$file\">$name, " . $arches{$arch} . "</a>";
	if ( $#exts != -1 ) {
	    foreach $ext (@exts) {
	        print " (<a href=\"./$arch/$file.$ext\"><em>" . 
			$formats{$ext} . "</em></a>)";
	    }
	}
	print "\n";
    }
}
 :>

