<define-tag our_URL whitespace=delete>
  <gettext>URL</gettext>
</define-tag>

# don't translate anything below this point

<define-tag URL whitespace=delete>
  <strong><our_URL/>:</strong> \
  <: if (q{%0} eq "") { print "<none/>"; }
     else { $tmp=q{%0}; print "<a href=\"$tmp\">$tmp</a>"; }
  :>
  <br />
</define-tag>
