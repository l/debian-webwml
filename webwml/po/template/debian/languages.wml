my %translit = (
# arabic   => "Arbytm",
  chinese  => "Zhongzu",
  greek    => "Ellinika",
  japanese => "Nihongo",
  korean   => "Hangul", # Not sure. "Hanguk-Mal" (=Spoken Korean)?
