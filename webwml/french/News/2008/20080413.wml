#use wml::debian::news
#use wml::debian::translation-check translation="1.4" maintainer="Simon Paillard"

<define-tag revision>3.1r8</define-tag>

<define-tag dsa>
    <tr><td align="center"><a href="$(HOME)/security/%0/dsa-%1">DSA-%1</a></td>
        <td align="center"><:
    my @p = ();
