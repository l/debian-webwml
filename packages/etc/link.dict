
# override email address linking
|[a-zA-Z0-9_\+\-\.]+\@([a-zA-Z0-9][\w\.+\-]+\.[a-zA-Z]{2,})| -> http://qa.debian.org/developer.php?login=$&

# link bug reports
/Closes:\s*(?:Bug)?#\d+(?:\s*,\s*(?:Bug)?#\d+)*/ -hie-> my $tmp = $&; $tmp =~ s@(Bug)?#(\d+)@<a href="http://bugs.debian.org/$2">$1#$2</a>@ig; "$tmp"

# Link the common licenses
|/usr/share/common-licenses/GPL(?:-2)?| -> http://www.gnu.org/copyleft/gpl.html
|/usr/share/common-licenses/LGPL(?:-2(?:\.1)?)?| -> http://www.gnu.org/copyleft/lgpl.html
|/usr/share/common-licenses/Artistic| -> http://www.opensource.org/licenses/artistic-license.php
|/usr/share/common-licenses/BSD| -> http://www.debian.org/misc/bsd.license
