#! /bin/bash

. `dirname $0`/../config.sh

disttomonitor=gutsy

flatdir=${filesdir}/flat
test -d ${flatdir} || exit 0
test -d ${flatdir}/$disttomonitor || exit 0

packagesdir=${filesdir}/packages
test -d ${packagesdir} || mkdir -p ${packagesdir}

cd ${archivedir}

for part in ${parts}
do
    if [ -s ${packagesdir}/${part} ]
    then
	savelog -l -c 15 ${packagesdir}/${part} > /dev/null
    fi

    LANG=C cut -d ' ' -f 1 ${flatdir}/$disttomonitor/${part}/Packages-*.us \
	| sort | uniq > ${packagesdir}/${part}
done
