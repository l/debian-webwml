#! /bin/bash

. `dirname $0`/../config.sh

flatdir=${filesdir}/flat
test -d ${flatdir} || mkdir -p ${flatdir}

cd ${archivedir}

# Main Archive
#
for dist in ${dists} experimental
do
    test -d ${flatdir}/${dist} || mkdir -p ${flatdir}/${dist}
    cd us/${dist}
    foo=\$arch_${dist//-/_}
    for arch in `eval echo $foo`
    do
	for part in ${parts}
	do
	    if [ -f ${part}/binary-${arch}/Packages.gz ]
	    then
		test -d ${flatdir}/${dist}/${part} || mkdir -p ${flatdir}/${dist}/${part}
		$bindir/flatten-db \
		    --db ${part}/binary-${arch}/Packages.gz \
		    --descr ${flatdir}/${dist}/${part}/Description-${arch}.us \
		    --output ${flatdir}/${dist}/${part}/Packages-${arch}.us
	    fi
       done
    done
   cd ${archivedir}
done

# non-US
#
for dist in ${dists}
do
    test -d ${flatdir}/${dist} || mkdir -p ${flatdir}/${dist}
    cd non-US/${dist}
    foo=\$arch_${dist//-/_}
    for arch in `eval echo $foo`
    do
	for part in ${parts}
	do
	    if [ -f ${part}/binary-${arch}/Packages.gz ]
	    then
		test -d ${flatdir}/${dist}/${part} || mkdir -p ${flatdir}/${dist}/${part}
		$bindir/flatten-db \
		    --db ${part}/binary-${arch}/Packages.gz \
		    --descr ${flatdir}/${dist}/${part}/Description-${arch}.non-US \
		    --output ${flatdir}/${dist}/${part}/Packages-${arch}.non-US
	    fi
       done
    done
   cd ${archivedir}
done

# updates
#
for dist in stable
do
    test -d ${flatdir}/${dist} || mkdir -p ${flatdir}/${dist}
    cd security/${dist}
    foo=\$arch_${dist//-/_}
    for arch in `eval echo $foo`
    do
	for part in ${parts}
	do
	    if [ -f ${part}/binary-${arch}/Packages.gz ]
	    then
		test -d ${flatdir}/${dist}/${part} || mkdir -p ${flatdir}/${dist}/${part}
		$bindir/flatten-db \
		    --db ${part}/binary-${arch}/Packages.gz \
		    --descr ${flatdir}/${dist}/${part}/Description-${arch}.security \
		    --output ${flatdir}/${dist}/${part}/Packages-${arch}.security
	    fi
       done
    done
   cd ${archivedir}
done


for dist in ${dists}
do
    for part in ${parts}
    do
      if [ "$dist" = "stable" ]; then
	  sort ${flatdir}/${dist}/${part}/Description-*.{us,non-US,security} \
	      | uniq > ${flatdir}/${dist}/${part}/Description
      else
	  sort ${flatdir}/${dist}/${part}/Description-*.{us,non-US} \
	      | uniq > ${flatdir}/${dist}/${part}/Description
      fi
    done
done

for part in ${parts}
do
  sort ${flatdir}/experimental/${part}/Description-*.us \
      | uniq > ${flatdir}/experimental/${part}/Description
done
