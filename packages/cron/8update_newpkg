#! /bin/bash

. `dirname $0`/../config.sh

disttomonitor=hardy

test -d $htmldir || mkdir -p $htmldir

for part in ${parts}
do
    test -d ${htmldir}/$disttomonitor || mkdir -p ${htmldir}/$disttomonitor

    if [ -f ${filesdir}/packages/${part}.13 ]
    then
	${scriptdir}/create_newpkg \
	    --old ${filesdir}/packages/${part}.13 \
	    --new ${filesdir}/packages/${part} \
	    --langs "en ${polangs}" \
	    --locales ${localedir} \
	    --output ${htmldir}/$disttomonitor/newpkg_${part} \
	    --descriptions ${filesdir}/flat/$disttomonitor/${part}/Description \
	    --sections ${filesdir}/flat/$disttomonitor/${part}/Section \
	    --component ${part}
    fi
done
