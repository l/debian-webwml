#! /bin/bash

. `dirname $0`/../config.sh

test -d ${archivedir} || mkdir -p ${archivedir}
cd ${archivedir}

# Main archive
#
arch=amd64

    for dist in oldstable
    do
	    for part in ${parts} main/debian-installer
	    do
		test -d us/${dist}/${part}/binary-${arch} || mkdir -p us/${dist}/${part}/binary-${arch}
		(cd us/${dist}/${part}/binary-${arch} &&
		    wget -q -N ${amd64_ftpsite}/dists/stable/${part}/binary-${arch}/Packages.gz)
	    (cd us/${dist} &&
		wget -q -N ${amd64_ftpsite}/dists/stable/Contents-${arch}.gz)
	done
  done

