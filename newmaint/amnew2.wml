  function find_user($db, $email) {
    $sql = "SELECT * FROM applicant WHERE email = '$email'";
    if (! ($result = pg_exec($db, $sql))) {
      echo "Problem with query", pg_ErrorMessage($db), "<BR>";
      return TRUE;
    }
    if (pg_NumRows($result) == 0) {
      return FALSE;
    }
    return TRUE;
  }

  function update_db($db, $sql) {
  if (! ($result = pg_exec($db, $sql))) {
    echo "Problem with query", pg_ErrorMessage($db), "<BR>";
    return -1;
  }
  if (($tuples = pg_CmdTuples($result)) != 1) {
    echo "Only one row should be effected but $tuple rows were<BR>\n";
  }
  return $tuples;
}
  function get_text($name, $value)
  {
    if ($value == "" ) {
      $str = " null ";
    } else {
      $str = "'" . $value . "'";
    }
    return $str;
  }
  function get_bool($name, $value)
  {
    if ($value == 't') 
    {
      $str = $name . "= true ";
    } else if ($value == 'f') {
      $str = $name . " = false ";
    } else {
      $str = $name . " = null ";
    }
    return $str;
  }
