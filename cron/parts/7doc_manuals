#!/bin/bash -e

# This file updates the doc/manuals/ directory of the web pages
# with the current CVS stuff

. `dirname $0`/../common.sh

cd $webtopdir/ddp-svn

echo "Running the DDP SVN update..."
cvs update -d -P &> cvs.log
svn update &> svn.log

echo "Running the DDP SVN build..."
make -C trunk publish &> make.log

echo
